int main (void) 
    {
      // declaring global variables?
    //n variable is lenght of the string
    int n = 0;
    string ImputText = 0;
    ImputText = get_string("Text :");
    n = strlen(ImputText);

    //valling functions
    count_letters(n, ImputText);
    count_words(n, ImputText);
