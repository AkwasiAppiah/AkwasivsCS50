
#include <stdio.h>
#include <cs50.h>
#include <ctype.h>
#include <string.h>
#include <math.h>

//function list
int count_letters(int n, string text);
int count_words(int n, string text);
int count_sentences(int n, string text);
void index(int n, string text);

int main(void)
{
  //set appropiate variables
  int n = 0;
  string ImputText = 0;
  ImputText = get_string("Text?:"); //input
  n = strlen(ImputText);
  
  //run the fucntions 
  count_letters(n, ImputText);
  count_words(n, ImputText);
  count_sentences(n, ImputText);
  index(n, ImputText);
  return 0;
}

int count_letters (int n, string text)
{
  int letters = 0;
  
  for (int i=0; i<n; i++)
  {
    if ((text[i] >= 'a' && text[i] <='z') || (text[i] >= 'A' && text[i] <= 'Z'))
    {
    letters++;
  }
}
  return letters;
}

int count_words(int n, string text)
{ 
  int words = 1; // THINK OF EDGE CASES
  
  for (int i=0; i<n; i++)
  
  {
    if (text[i] == ' ')
    {
    
    words++;
    }
  }
  return words;
}

int count_sentences(int n, string text)
{ 
  int sentences = 0;
  
  for (int i = 0; i < n; i++)
  {
    if (text[i] == '.' || text[i] == '?' || text[i] == '!')
    
    {
    sentences++;
    
  }
  return sentences;
}

}
void index(int n, string ImputText)

{ 
  
  float L = ((float)count_letters(n, ImputText)*100) / ((float)count_words(n, ImputText)); // cast to float for accuracy
  float S = ((float)count_sentences(n, ImputText)*100 / (float)count_words(n, ImputText));
  
  int index = round ((0.0588 * L) - (0.296 * S) - 15.8);
  
  if (index >= 16)
  {
    printf("Grade 16+\n");
  }
  
  else if (index < 1)
  {
    printf("Before Grade 1\n");
  }
  
  else
  {
    printf("Grade %i\n", index);
  }
    
}
